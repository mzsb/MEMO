<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="android:editTextColor">@color/primary_light</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary_light</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_selecthand_left_48dp</item>
        <item name="android:textSelectHandleRight">@drawable/ic_selecthand_right_48dp</item>
        <item name="android:textSelectHandle">@drawable/ic_selecthand_48dp</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.MaterialComponents.Light.Dialog.Bridge">
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="android:editTextColor">@color/primary_light</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary_light</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_selecthand_left_48dp</item>
        <item name="android:textSelectHandleRight">@drawable/ic_selecthand_right_48dp</item>
        <item name="android:textSelectHandle">@drawable/ic_selecthand_48dp</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

</resources>
