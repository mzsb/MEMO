<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="android:editTextColor">@color/primary_light</item>
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary_light</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_selecthand_left_48dp</item>
        <item name="android:textSelectHandleRight">@drawable/ic_selecthand_right_48dp</item>
        <item name="android:textSelectHandle">@drawable/ic_selecthand_48dp</item>
    </style>

    <style name="BlueEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSelectHandle">@drawable/ic_selecthand_accent_48dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_accent</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_selecthand_left_accent_48dp</item>
        <item name="android:textSelectHandleRight">@drawable/ic_selecthand_right_accent_48dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ColorPickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_rounded_blue_1</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="buttonStyle">@style/AppButtonBlue</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="AccentSwitch" parent="">
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="AppButtonBlue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>